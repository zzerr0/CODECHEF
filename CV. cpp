//INSERTION SORT 

#include<iostream>
#include<string>
using namespace std;
int main()
{
  int t;
  cin>>t;
  while(t>0)
  {
  int l;
  cin>>l;
  int count=0;
  string str;
  str.resize(l);
  cin>>str;
  for(int i=0;i<l-1;i++)
  {
    if((str[i]!='a'&& str[i]!='e'&&str[i]!='i' &&str[i]!='o'&& str[i]!='u')
      && (str[i+1]=='a'||str[i+1]=='e'||str[i+1]=='i'||str[i+1]=='o'|| str[i+1]=='u')) 
   {
     count++;
   }
  }
  cout<<count<<endl;
  t--;
  }
  return 0;
}
